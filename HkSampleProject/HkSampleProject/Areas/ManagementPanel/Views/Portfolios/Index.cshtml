@model IEnumerable<HkSampleProject.Models.Entities.Portfolios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_PanelLayout.cshtml";
}

<h2>Galeri</h2>

<p>
    @Html.ActionLink("Create New", "Create",null , new {@class="btn-btn primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PortfolioCategories.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PortfolioDetails.Header)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@item.ImageUrl" alt="img" style="width:15%;height:15%" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PortfolioCategories.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PortfolioId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PortfolioId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PortfolioId })
        </td>
    </tr>
}

</table>
